---
import Layout from "@/layouts/Layout.astro";

interface Props {
  title: string;
}

const { title } = Astro.props as Props;
---

<Layout title={title}>
  <section class="py-16">
    <h1 class="font-mono text-neutral-100 text-xl mb-8">
      <span class="text-neutral-600">#</span> {title}
    </h1>

    <slot />
  </section>
</Layout>

