---
import { getCollection } from 'astro:content';
import Work from "@/components/Work.astro"
import Contribution from "@/components/Contribution.astro";
import Talk from "@/components/Talk.astro";
import Project from "@/components/Project.astro";
import EmailSubscribe from "@/components/EmailSubscribe.tsx";
import Layout from '@/layouts/Layout.astro';
import GithubIcon from '@/components/icons/GithubIcon.astro';
import TwitterIcon from '@/components/icons/TwitterIcon.astro';
import FarcasterIcon from '@/components/icons/FarcasterIcon.astro';
import LinkedinIcon from '@/components/icons/LinkedinIcon.astro';
import EmailIcon from '@/components/icons/EmailIcon.astro';


const work = (await getCollection('work')).sort(
  (a, b) => a.data.order.valueOf() - b.data.order.valueOf(),
);

const projects = (await getCollection('projects')).sort(
  (a, b) => a.data.order.valueOf() - b.data.order.valueOf(),
);

const contributions = (await getCollection('contributions')).sort(
  (a, b) => a.data.order.valueOf() - b.data.order.valueOf(),
);

const talks = (await getCollection('talks')).sort(
  (a, b) => a.data.order.valueOf() - b.data.order.valueOf(),
);
---

<Layout title="hi, i'm jayden" description="i build software that maximizes individual sovereignty. this is my website." type="profile">

  <section class="py-32 flex flex-col">
    <h1 class="font-mono text-neutral-100 text-2xl mb-2">hi, i'm jayden</h1>
    <h2 class="font-mono text-neutral-400 text-xl mb-4">i build software that <span class="bg-neutral-100 text-neutral-900 px-1">maximizes individual sovereignty</span></h2>
    <p class="font-mono text-neutral-600 text-md flex items-center gap-2">
      <span>↳ say hi:</span>
      <a target="_blank" href="https://windle.dev/gh" class="group inline-flex items-center justify-center px-1 py-1 text-neutral-600 hover:bg-zinc-800 hover:text-neutral-100">
        <GithubIcon class="h-[1rem] w-[1rem] pointer-events-none select-none" /></a>
      <a target="_blank" href="https://windle.dev/tw" class="group inline-flex items-center justify-center px-1 py-1 text-neutral-600 hover:bg-black hover:text-neutral-100">
        <TwitterIcon class="h-[1rem] w-[1rem] pointer-events-none select-none" /></a>
      <a target="_blank" href="https://windle.dev/fc" class="group inline-flex items-center justify-center px-1 py-1 text-neutral-600 hover:bg-purple-500 hover:text-neutral-100">
        <FarcasterIcon class="h-[1rem] w-[1rem] pointer-events-none select-none" /></a>
      <a target="_blank" href="https://windle.dev/in" class="group inline-flex items-center justify-center px-1 py-1 text-neutral-600 hover:bg-sky-700 hover:text-neutral-100">
        <LinkedinIcon class="h-[1rem] w-[1rem] pointer-events-none select-none" /></a>
      <a target="_blank" href="https://windle.dev/em" class="group inline-flex items-center justify-center px-1 py-1 text-neutral-600 hover:bg-neutral-100 hover:text-neutral-900">
        <EmailIcon class="h-[1rem] w-[1rem] pointer-events-none select-none" /></a>
    </p>
  </section>

  <section class="flex flex-col mb-16 gap-1">
    <h1 class="font-mono text-neutral-100 text-xl mb-4"><span class="text-neutral-600">#</span> projects</h1>
    {projects.map(({ data }) => (
      <Project {...data} />
    ))}
  </section>

  <section class="flex flex-col mb-16">
    <h1 class="font-mono text-neutral-100 text-xl mb-4"><span class="text-neutral-600">#</span> contributions</h1>
    {contributions.map(({ data }) => (
      <Contribution {...data} />
    ))}
  </section>

  <!--
  <section class="flex flex-col mb-16">
    <h1 class="font-mono text-neutral-100 text-xl mb-4"><span class="text-neutral-600">#</span> talks</h1>
    {talks.map(({ data }) => (
      <Talk {...data} />
    ))}
  </section>
  -->

  <!--
  <section class="flex flex-col mb-16">
    <h1 class="font-mono text-neutral-100 text-xl mb-4"><span class="text-neutral-600">#</span> hackathons</h1>
    <p class="font-mono text-neutral-600 mb-1"> ↳ nothing to see here</p>
  </section>
  -->

  <section class="flex flex-col mb-16">
    <h1 class="font-mono text-neutral-100 text-xl mb-4"><span class="text-neutral-600">#</span> work</h1>
    {work.map(({data}) => (
      <Work {...data} />
    ))}
  </section>

  <EmailSubscribe client:load />

</Layout>
